@{
    string userLoggedIn = "Admin";
    if (User.IsInRole("2"))
    {
        BusinessLayer.Concrete.DoctorManager doctorManager = new BusinessLayer.Concrete.DoctorManager(new DataAccessLayer.EntityFramework.EfDoctorDal());
        userLoggedIn = doctorManager.GetByEmail((string)Session["AdminUserName"]).doctorPreName + " " + doctorManager.GetByEmail((string)Session["AdminUserName"]).doctorLastName;
    }
    }


    @{
        Layout = null;
    }
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        @if (User.IsInRole("1"))
        {

            <title>DEUCENG HOSPITAL ADMIN</title>
        }
        @if (User.IsInRole("2"))
        {

            <title>DEUCENG DOCTOR PAGE</title>
        }
        <!-- Font Awesome Icons -->
        <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
        <!-- IonIcons -->
        <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
        <!-- Theme style -->
        <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
        <!-- Google Font: Source Sans Pro -->
        <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    </head>
    <!--
    BODY TAG OPTIONS:
    =================
    Apply one or more of the following classes to to the body tag
    to get the desired effect
    |---------------------------------------------------------|
    |LAYOUT OPTIONS | sidebar-collapse                        |
    |               | sidebar-mini                            |
    |---------------------------------------------------------|
    -->
    <body class="hold-transition sidebar-mini">
        <div class="wrapper">
            <!-- Navbar -->
            <!-- /.navbar -->
            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4">
                <!-- Brand Logo -->
                <!-- Sidebar -->
                <div class="sidebar">
                    <!-- Sidebar user panel (optional) -->
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="/AdminLTE-3.0.4/login-form-19/images/medical-team.png" class="img-circle elevation-2" alt="User Image">
                        </div>
                        <div class="info">
                            @if (User.IsInRole("1"))
                            {

                            <a href="#" class="d-block">@userLoggedIn</a>
                            }
                            @if (User.IsInRole("2"))
                            {

                                <a href="#" class="d-block">@userLoggedIn</a>
                            }

                        </div>
                    </div>
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                            @if (User.IsInRole("1"))
                            {
                                <li class="nav-item has-treeview">
                                    <a href="/AdminDepartment/Index" class="nav-link">
                                        <i class="fas fa-hospital"></i>
                                        <p>
                                            Departments
                                        </p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="/AdminDoctor/Index" class="nav-link">
                                        <i class="fas fa-user-md"></i>
                                        <p>
                                            Doctors
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminAppointment/Index" class="nav-link">
                                        <i class="fas fa-calendar-check"></i>
                                        <p>
                                            Appointments
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminPatient/Index" class="nav-link">
                                        <i class="fas fa-procedures"></i>
                                        <p>
                                            Patients
                                        </p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="/AdminStaff/Index" class="nav-link">
                                        <i class="fas fa-hospital-user"></i>
                                        <p>
                                            Staff
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminStock/Index" class="nav-link">
                                        <i class="fas fa-briefcase-medical"></i>
                                        <p>
                                            Stock
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminAnnualLeave/Index" class="nav-link">
                                        <i class="fas fa-calendar"></i>
                                        <p>
                                            Annual Leave
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminPrescription/Index" class="nav-link">
                                        <i class="fas fa-receipt"></i>
                                        <p>
                                            Prescription
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminUser/Index" class="nav-link">
                                        <i class="fas fa-user"></i>
                                        <p>
                                            Users
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AppointmentHour/Index" class="nav-link">
                                        <i class="fas fa-clock"></i>
                                        <p>
                                            Appointment Hours
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/Log/Index" class="nav-link">
                                        <i class="fas fa-bars"></i>
                                        <p>
                                            Logs
                                        </p>
                                    </a>
                                </li>
                            }
                            @if (User.IsInRole("2"))
                            {

                                <li class="nav-item">
                                    <a href="/AdminAppointment/DoctorDisplayAppointment" class="nav-link">
                                        <i class="fas fa-hospital"></i>
                                        <p>
                                            My Appointments
                                        </p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="/AdminAnnualLeave/DoctorAnnualLeave" class="nav-link">
                                        <i class="fas fa-calendar"></i>
                                        <p>
                                            Take Annual Leave
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminAnnualLeave/DoctorDisplayAnnualLeave" class="nav-link">
                                        <i class="fas fa-calendar-check"></i>
                                        <p>
                                            My Annual Leaves
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminPatient/DoctorDisplayPatient" class="nav-link">
                                        <i class="fas fa-hospital-user"></i>
                                        <p>
                                            My Patients
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/AdminPrescription/DoctorDisplayPrescription" class="nav-link">
                                        <i class="fas fa-book-medical"></i>
                                        <p>
                                            My Prescriptions
                                        </p>
                                    </a>
                                </li>
                            }

                            <li class="nav-item has-treeview">
                                <a href="/Home/Index" class="nav-link">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <p>
                                        Logout
                                    </p>
                                </a>
                            </li>

                            <!-- /.deleted-->
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            </aside>
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
                <!-- Main content -->
                <div class="content">
                    @RenderBody()
                    <!-- /.container-fluid -->
                </div>
                <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
        </div>
        <!-- ./wrapper -->
        <!-- REQUIRED SCRIPTS -->
        <!-- jQuery -->
        <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap -->
        <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- AdminLTE -->
        <script src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>
        <!-- OPTIONAL SCRIPTS -->
        <script src="~/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
        <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
        <script src="~/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>
    </body>
</html>
