<h3>Prescriptions</h3>
<br />
<div class="code-cut">
    @(Html.Grid(Model).Named("Prescriptions").Columns(c =>
{

    c.Add(model => model.prescriptionID).Titled("Prescription ID").Filterable(true).Sortable(true);
    c.Add(model => model.medicineName).Titled("Medicine Name").Filterable(true).Sortable(true);
    c.Add(model => model.useIntr).Titled("Use Instructions").Filterable(true).Sortable(true);
    c.Add(model => model.duration).Titled("Duration").Filterable(true).Sortable(true);
    c.Add(model => model.patientPreName).Titled("Patient Prename").Filterable(true).Sortable(true);
    c.Add(model => model.patientLastName).Titled("Patient Lastname").Filterable(true).Sortable(true);
    c.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(x => Html.ActionLink("Delete", "DeletePrescription", new { id = x.prescriptionID }));
    c.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(x => Html.ActionLink("Update", "UpdatePrescription", new { id = x.prescriptionID }));
}).WithPaging(10).EmptyText("No data found")

)

