@model List<EntityLayer.Concrete.Appointment>
@using GridMvc.Html

@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-3.4.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/gridmvc.min.js")"></script>
<h3>My Appointments</h3>
<br />
<div class="code-cut">
    @(Html.Grid(Model).Named("Appointments").Columns(c =>
{
    c.Add(model => model.appDate).Titled("Appoinment Date").Filterable(true).Sortable(true);
    c.Add(model => model.AppointmentHour.Hour).Titled("Appointment Hour").Filterable(true).Sortable(true);
    c.Add(model => model.Patient.patientPreName).Titled("Patient Prename").Filterable(true).Sortable(true);
    c.Add(model => model.Patient.patientLastName).Titled("Patient Lastname").Filterable(true).Sortable(true);
    c.Add(model => model.Doctor.doctorPreName).Titled("Doctor Prename").Filterable(true).Sortable(true);
    c.Add(model => model.Doctor.doctorLastName).Titled("Doctor Lastname").Filterable(true).Sortable(true);
    c.Add(model => model.Doctor.Department.departmentName).Titled("Department").Filterable(true).Sortable(true);
}).WithPaging(10).EmptyText("No data found")

)


</div>
